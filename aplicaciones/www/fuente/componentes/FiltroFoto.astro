---
interface Props {
  ruta: string;
  alt: string;
}

const { ruta, alt } = Astro.props;
---

<div class="marco">
  <img src={ruta} alt={alt} />
</div>

<style lang="scss">
  $dimPunto: 0.26em;
  $color: var(--superficieOscura);
  $contrasteEfecto: 2000%;
  $brillo: 70%;
  $contrasteFoto: 110%;
  $difuminado: 1px;
  $tipoComposicion: soft-light;

  .marco {
    width: 200px;
    height: 200px;
    position: relative;
    display: flex;
    top: 0;
    right: 0;

    filter: contrast($contrasteEfecto);
    overflow: hidden;

    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      mix-blend-mode: $tipoComposicion;
      filter: grayscale(1) brightness($brillo) contrast($contrasteFoto) blur($difuminado);
    }

    &::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      bottom: -50%;
      right: -50%;
      background: radial-gradient(circle at center, $color, var(--crema));
      background-size: $dimPunto $dimPunto;
      transform: rotate(20deg);
    }
  }
</style>
