---
import Plantilla from '@/plantillas/Plantilla.astro';
import { obtenerPagina, obtenerPaginas } from '@/utilidades/cache';
import { base } from '@/utilidades/constantes';

const page = await obtenerPagina('inicio');
if (!page) {
  throw new Error('PÃ¡gina inicio no encontrada');
}

const todasPaginas = await obtenerPaginas();
const paginas = (todasPaginas as any[]).filter(
  (pagina) => pagina.slug !== 'inicio' && pagina.slug !== 'enflujo-historia-internet'
);
---

<Plantilla titulo="" descripcion={page.descripcion}>
  <main class="inicio" data-pagefind-body>
    <div class="contenidoInicio" set:html={page.content} />

    <div class="contenedorEnlaces">
      {
        paginas.map((pagina) => {
          if (pagina.principal) {
            return (
              <a class="enlace" href={`${base}/${pagina.slug}/`}>
                <span class="boton">{pagina.title}</span>
              </a>
            );
          }
        })
      }
      <span class="separadorMenu"></span>
      {
        paginas.map((pagina) => {
          if (!pagina.principal) {
            return (
              <a class="enlace" href={`${base}/${pagina.slug}/`}>
                <span class="boton">{pagina.title}</span>
              </a>
            );
          }
        })
      }
    </div>
  </main>
</Plantilla>

<style is:global lang="scss">
  .inicio {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    width: 100%;
    text-align: center;

    h1 {
      font-family: var(--fuenteTitulos);
      font-size: 54px;
      margin: 10vh auto 3vh auto;
    }

    h2 {
      font-weight: 400;
      font-size: 40px;
      width: 100%;
      margin: 0 0 0.5em 0;
    }

    h3 {
      font-weight: 400;
      font-size: 30px;
      width: 100%;
      margin: 0 0 5vh 0;
    }

    p {
      width: 38%;
      font-size: 18px;
      margin: 0 auto;
    }

    .separadorMenu {
      display: flex;
      flex-basis: 100%;
      justify-content: center;

      &::before {
        content: '';
        display: block;
        width: 50vw;
        border-bottom: 2px dotted;
      }
    }

    @media (max-width: 1200px) {
      h1 {
        font-size: 48px;
        margin: 15vh auto 4vh auto;
      }

      h2 {
        font-size: 36px;
      }

      h3 {
        font-size: 26px;
      }

      p {
        width: 50%;
      }
    }

    @media (max-width: 790px) {
      h1 {
        font-size: 38px;
        margin: 16vh auto 3vh auto;
      }

      h2 {
        font-size: 28px;
      }

      h3 {
        font-size: 22px;
        margin: 0 0 3vh 0;
      }

      p {
        width: 70%;
        font-size: 16px;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 32px;
        margin: 8vh auto 2vh auto;
      }

      h2 {
        font-size: 24px;
      }

      h3 {
        font-size: 18px;
      }

      p {
        width: 90%;
        font-size: 14px;
      }
    }
  }
</style>

<style lang="scss">
  span {
    color: var(--colorEnlace);
  }

  .contenedorEnlaces {
    display: flex;
    justify-content: center;
    font-size: 22px;
    width: 80%;
    margin-top: 60px;
    gap: 20px;
    margin: 3em auto 0 auto;
    flex-wrap: wrap;
  }

  .boton {
    display: inline-block;
    white-space: nowrap;
  }

  .enlace,
  .enlace:hover {
    text-decoration: none;
  }

  @media (max-width: 950px) {
    .contenedorEnlaces {
      flex-direction: row;
      flex-wrap: wrap;
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
    }

    .boton {
      margin: 15px;
    }

    .enlace {
      flex: 0 0 45%;
      margin-bottom: 15px;
    }
  }

  @media (max-width: 500px) {
    .contenedorEnlaces {
      font-size: 18px;
      margin-top: 30px;
      flex-direction: column;
    }

    .boton {
      margin: 10px;
      margin-bottom: 15px;
    }
  }
</style>
