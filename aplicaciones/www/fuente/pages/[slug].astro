---
import TituloPagina from '@/componentes/TituloPagina.astro';
import ResaltadorCodigo from '@/componentes/ResaltadorCodigo.astro';
import Plantilla from '@/plantillas/Plantilla.astro';
import { obtenerPaginas, obtenerPagina, limpiarCacheMemoria } from '@/utilidades/cache';

export async function getStaticPaths() {
  const paginas = await obtenerPaginas();
  return paginas.map(({ slug }) => ({ params: { slug } }));
}

const { slug } = Astro.params;
// Permitir forzar refresco del cache en dev con ?refresh=1
try {
  const url = new URL(Astro.request.url);
  if (url.searchParams.get('refresh') === '1') {
    limpiarCacheMemoria();
  }
} catch {}
const page = await obtenerPagina(slug);

if (!page) {
  return Astro.redirect('/404');
}
---

<Plantilla titulo={page.title} descripcion={page.descripcion}>
  <ResaltadorCodigo />
  <main class="pagina" data-pagefind-body>
    <TituloPagina titulo={page.title} slug={page.slug} />
    <div class="contenidoPagina" set:html={page.content} />
  </main>
</Plantilla>

<style lang="scss">
  .contenidoPagina {
    width: min(1200px, 92vw);
    margin: 1.25rem auto;
    padding: 0;
  }

  @media (min-width: 601px) {
    .contenidoPagina {
      width: 85vw;
    }
  }

  @media (min-width: 850px) {
    .contenidoPagina {
      width: 60vw;
    }
  }
</style>
