---
import type { Pagina } from '@/tipos';

interface Props {
  pagina: Pagina;
}

const { pagina } = Astro.props;
---

<main class='pagina'>
  <h1 class='titulo'>{pagina.title}</h1>
  <div class='contenidoPagina' set:html={pagina.content} />
</main>

<style lang='scss' is:global>
  .pagina {
    .contenidoPagina {
      padding: 2em;
    }
  }
</style>
